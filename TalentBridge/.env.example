# TalentBridge Environment Variables Template
# Copy this file to .env and update with your actual values
# DO NOT commit .env file to version control!

# ===================================
# Application Configuration
# ===================================
APP_PORT=8080

# ===================================
# Database Configuration
# ===================================
DB_NAME=talentbridge
DB_USER=talentbridge_user
DB_PASSWORD=change_this_password
DB_ROOT_PASSWORD=change_this_root_password
DB_PORT=3306

# ===================================
# Redis Configuration
# ===================================
REDIS_PASSWORD=change_this_redis_password
REDIS_PORT=6379

# ===================================
# JWT Configuration
# ===================================
# IMPORTANT: Generate a strong secret key for production!
# You can generate one using: openssl rand -base64 64
JWT_SECRET=your-very-secure-secret-key-at-least-256-bits-long-please-change-this
JWT_ACCESS_EXPIRATION=900
JWT_REFRESH_EXPIRATION=86400

# ===================================
# Google Cloud Storage Configuration (Optional)
# Leave empty to use local file storage
# ===================================
GCS_PROJECT_ID=
GCS_BUCKET_NAME=
GCS_CREDENTIALS_PATH=./gcs-credentials.json

# ===================================
# Email Configuration (Optional)
# Leave empty to disable email features
# ===================================
# For Gmail, use: smtp.gmail.com
# For other providers, check their SMTP settings
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@talentbridge.com

# ===================================
# Nginx Configuration (Optional)
# ===================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ===================================
# Additional Settings
# ===================================
# Set to 'true' for production
SPRING_JPA_SHOW_SQL=false

# Logging level (DEBUG, INFO, WARN, ERROR)
LOGGING_LEVEL=INFO
